<?xml version="1.0" encoding="utf-8" ?>

<!-- Packet definition from the server -->

<Definition namespace="CT.Packets">
	<!-- Using Segments -->>
	<using>CT.Packets</using>>
	<using>CT.Common.DataType</using>>
	<using>CT.Common.Serialization</using>>
	<using>CT.Common.Serialization.Type</using>>

	<!-- Declare Data Types -->>
	<class name="Input_Movement">
		<NetVec2 name="PivotPosition"/>
		<NetVec2 name="Direction"/>
		<Single name="Velocity"/>
	</class>

	<class name="Input_Action">
		<Int32 name="ActionType"/>
	</class>
	
	<!-- Declare Packets -->>
	
	<!-- Try Join Matching -->>
	<client name="Req_UserInput_Movement">
		<UserToken name="Token"/>
		<Input_Movement name="InputMovement"/>
	</client>
	<client name="Req_UserInput_Action">
		<UserToken name="Token"/>
		<Input_Action name="InputAction"/>
	</client>
</Definition>