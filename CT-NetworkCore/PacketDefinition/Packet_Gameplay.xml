<?xml version="1.0" encoding="utf-8" ?>

<!-- Packet definition from the server -->

<Definition namespace="CT.Packets">
	<!-- Using Segments -->>
	<using>CT.Packets</using>>
	<using>CT.Common.DataType</using>>
	<using>CT.Common.Serialization</using>>
	<using>CT.Common.Serialization.Type</using>>

	<!-- Declare Data Types -->>
	<struct name="NetEntityIno">
		<NetEntityType name="Type"/>
		<NetEntityId name="Id"/>
	</struct>
	
	<!-- Declare Packets -->>
	<server name="InitialWorldState">
		<NetStringShort name="MiniGameName"/>
	</server>
	
	<server name="SpawnEntities">
		<NetArray name="SpawnedEntities" type="EntityPlayerState"/>
	</server>

	<server name="DespawnEntities">
		<NetFixedArray name="DespawnEntities" type="NetEntityId"/>
	</server>
</Definition>