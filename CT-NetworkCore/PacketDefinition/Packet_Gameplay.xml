<?xml version="1.0" encoding="utf-8" ?>

<!-- Packet definition from the server -->

<Definition namespace="CT.Packets">
	<!-- Using Segments -->>
	<using>CT.Packets</using>>
	<using>CT.Common.DataType</using>>
	<using>CT.Common.Serialization</using>>
	<using>CT.Common.Serialization.Type</using>>

	<!-- Declare Data Types -->>
	
	<!-- Declare Packets -->>
	
	<server name="OnClientEnter">
		<ClientId name="ClientId"/>
		<NetStringShort name="Username"/>
		<Int32 name="Costume"/>
	</server>
	<server name="OnClientLeave">
		<ClientId name="ClientId"/>
	</server>
	
	<server name="MiniGameData" custom="true">
		<MiniGameMapType name="MapType"/>
		<MiniGameMapTheme name="Theme"/>
		<NetFixedArray name="SpawnPositions" type="NetVec3"/>
	</server>
		
	<server name="SpawnEntities" custom="true"/>
	<server name="DespawnEntities">
		<NetFixedArray name="DespawnIdArray" type="NetEntityId"/>
	</server>
	
</Definition>